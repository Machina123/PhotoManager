<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="net.machina.photomanager.CollagePickerActivity"
    android:background="#ff000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ff000000">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnCollage1"
            android:layout_weight="1"
            android:src="@drawable/kolaz1"
            android:background="#ff000000" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnCollage2"
            android:layout_weight="1"
            android:background="#ff000000"
            android:src="@drawable/kolaz2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ff000000">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnCollage3"
            android:background="#ff000000"
            android:src="@drawable/kolaz3"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnCollage4"
            android:background="#ff000000"
            android:layout_weight="1"
            android:src="@drawable/kolaz4" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ff000000">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnCollage5"
            android:background="#ff000000"
            android:layout_weight="1"
            android:src="@drawable/kolaz5" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnCollage6"
            android:background="#ff000000"
            android:layout_weight="1"
            android:src="@drawable/kolaz6" />
    </LinearLayout>
</LinearLayout>
